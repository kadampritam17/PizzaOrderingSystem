@model PizzaOrderingSystem.Models.Pizza
@{
    ViewBag.Title = "Update";
}

<h2>Update Pizza Details</h2>

<div>
    @using (Html.BeginForm())
    {
        <div class="form-horizontal">

            <hr />

            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                <label class="control-label col-md-2">Pizza Name : </label>
                <div class="col-md-10">
                    <input class="form-control" type="text" name="PizzaName" value="@Model.PizzaName" />
                    @Html.ValidationMessageFor(x => x.PizzaName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Pizza Description : </label>
                <div class="col-md-10">
                    <input class="form-control" type="text" name="PizzaDescription" value="@Model.PizzaDescription" />
                    @Html.ValidationMessageFor(x => x.PizzaDescription, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Pizza Type : </label>
                <div class="col-md-10">
                    <input class="form-control" type="text" name="PizzaType" value="@Model.PizzaType" />
                    @Html.ValidationMessageFor(x => x.PizzaType, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Pizza Unit Price : </label>
                <div class="col-md-10">
                    <input class="form-control" type="number" name="PizzaUnitPrice" value="@Model.PizzaUnitPrice" />
                    @Html.ValidationMessageFor(x => x.PizzaUnitPrice, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Update" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

</div>